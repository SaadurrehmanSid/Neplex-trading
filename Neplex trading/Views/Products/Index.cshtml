@model ReflectionIT.Mvc.Paging.IPagingList<Product>
@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Index";
}

<div class="category-banner">
    <div class="cat-heading">
        <span>Women</span>
    </div>
</div>
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="container-inner">
                    <ul>
                        <li class="home">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <span><i class="fa fa-angle-right"></i></span>
                        </li>
                        <li class="category3"><span>Products</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="shop-with-sidebar">
    <div class="container">
        <div class="row">
            <!-- left sidebar start -->
            <div class="col-md-3 col-sm-12 col-xs-12 text-left">
                <div class="topbar-left">

                    <aside class="sidebar-content">
                        <div class="sidebar-title">
                            <h6>Categories</h6>
                        </div>
                        <ul class="sidebar-tags">
                            @foreach (var category in ViewBag.category)
                            {
                                <li><a asp-controller="Categories" asp-action="ProductByCategory" asp-route-id="@category.CartegoryId">@category.Name</a><span>(@Model.Where(e=>e.CategoryId==category.CartegoryId).Count())</span></li>
                            }
                        </ul>
                    </aside>
                </div>
            </div>
            <!-- left sidebar end -->
            <!-- right sidebar start -->
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="shop-grid-tab">
                        <div class="row">
                            <div class="shop-product-tab first-sale">
                                @foreach (var product in Model)
                                {

                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="two-product">
                                            <!-- single-product start -->
                                            <div class="single-product">
                                                <div class="product-img">
                                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">
                                                        <img class="primary-image" style="width:269px;height:329px;" src="~/img/@product.ProductImage" alt="" />
                                                        <img class="secondary-image" style="width:269px;height:329px;" src="~/img/@product.ProductImage" alt="" />
                                                    </a>
                                                    <div class="action-zoom">
                                                        <div class="add-to-cart">
                                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" title="Quick View"><i class="fa fa-search-plus"></i></a>
                                                        </div>
                                                    </div>
                                                    <div class="actions">
                                                        <div class="action-buttons">
                                                            <div class="add-to-links">
                                                                <div class="compare-button">
                                                                    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@product.ProductId" title="Add to Cart"><i class="icon-bag"></i></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="price-box">
                                                        <span class="new-price">@product.Price PKR</span>
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <h2 class="product-name"><a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.ProductName</a></h2>
                                                    <p>@product.ProductArtNumber</p>
                                                </div>
                                            </div>
                                            <!-- single-product end -->
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                    <div class="shop-content-bottom">
                        <div class="shop-toolbar btn-tlbr">
                            <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                                <div class="pages">
                                    <label>Page:</label>
                                  <vc:pager paging-list="@Model"></vc:pager>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- shop toolbar end -->
                </div>
            </div>
        </div>
        <!-- right sidebar end -->
    </div>
</div>
		

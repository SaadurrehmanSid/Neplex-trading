@model DetailsProductVM

@{
    ViewData["Title"] = "Details";
}
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="container-inner">
                    <ul>
                        <li class="home">
                            <a asp-controller="Products" asp-action="Index">Products</a>
                            <span><i class="fa fa-angle-right"></i></span>
                        </li>
                        <li class="category3"><span>Product Details</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-details-area">
    <div class="container">
        <div class="row">

            <div class="col-md-5">
                <img src="~/img/@Model.Product.ProductImage">
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="product-list-wrapper">
                    <div class="single-product">
                        <div class="product-content">
                            <h2 class="product-name"><a href="#">@Model.Product.ProductName</a></h2>
                            <div class="rating-price">
                                <div class="price-boxes">
                                    <span class="new-price">@Model.Product.Price PKR</span>
                                </div>
                            </div>
                            <div>
                                <p>@Model.Product.ProductDescription</p>
                            </div>
                            <div class="product-desc">
                            </div>
                            <p class="availability in-stock">Availability: @if (Model.Product.InStock)
                            {<span> In stock</span>}
                            else {<span class="text-danger"> Not Available</span> }
                            </p>
                            <div class="actions-e">
                                <div class="action-buttons-single">
                                    <div class="add-to-cart">
                                        <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.Product.ProductId"
                                           >Add to cart</a>
                                    </div>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-outline-dark" asp-action="AdminIndex">Back to  list</a>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="our-product-area new-product">
    <div class="container">
        <div class="area-title">
            <h2>Related products</h2>
        </div>
        <!-- our-product area start -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="features-curosel">
                        <!-- single-product start -->
                        @if (Model.RelatedProducts.Any())
                        {
                            @foreach (var product in Model.RelatedProducts)
                            {
                                <div class="col-lg-12 col-md-12">
                                    <div class="single-product first-sale">
                                        <div class="product-img">
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">
                                                <img class="primary-image" src="~/img/@product.ProductImage" alt="" />
                                                <img class="secondary-image" src="~/img/@product.ProductImage" alt="" />
                                            </a>
                                            <div class="action-zoom">
                                                <div class="add-to-cart">
                                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" title="Quick View"><i class="fa fa-search-plus"></i></a>
                                                </div>
                                            </div>
                                            <div class="actions">
                                                <div class="action-buttons">
                                                    <div class="add-to-links">
                                                      
                                                        <div class="compare-button">
                                                            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@product.ProductId" title="Add to Cart"><i class="icon-bag"></i></a>
                                                        </div>
                                                    </div>
                                                   
                                                </div>
                                            </div>
                                            <div class="price-box">
                                                <span class="new-price">@product.Price PKR</span>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <h2 class="product-name"><a href="#">@product.ProductName</a></h2>
                                            <p>@product.ProductArtNumber</p>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                        else
                        {
                            <h4>No related products found!</h4>
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- our-product area end -->
    </div>
</div>

